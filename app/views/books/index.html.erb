<% if flash[:notice] %>
    <p class="flash">
    <%= flash[:notice] %>
    </p>
<% end %>
<h1 class="headline">Books</h1>
<table cellpadding="3">

    <tr>
        <th class="title-width">Title</th>
        <th>Body</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td class="btn"><%= link_to "Show", book_path(book),class: "link" %></td>
            <td class="btn"><%= link_to "Edit", edit_book_path(book),class: "link" %></td>
            <td class="btn"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" =>"Are you sure?",class: "link" %></td>
        </tr>
    <% end %>
</table>




<h2 class="new_book">New book</h1>
<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <ul>
        <li><%= message %></li>
    </ul>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
    <p class="title">Title</p>
    <div class="text-area"><%= f.text_field :title %></div>
    <p class="title">Body</p>
    <div class="text-area"><%= f.text_area :body %></div>
    <div class="push"><%= f.submit 'Create Book' %></div>
<% end %>
