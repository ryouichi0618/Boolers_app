<% if flash[:notice] %>
    <p class="flash">
    <%= flash[:notice] %>
    </p>
<% end %>
<h1 class="headline bold">Books</h1>
<table cellpadding="3">

    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td class="btn"><%= link_to "Show", book_path(book),class: "link" %></td>
            <td class="btn"><%= link_to "Edit", edit_book_path(book),class: "link" %></td>
            <td class="btn"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" =>"Are you sure?",class: "link" %></td>
        </tr>
    <% end %>
</table>




<h2 class="new_book bold">New book</h1>
<% if @book.errors.any? %>
 <div class="error-box">
    <p class="error-count"><%= @book.errors.count%>errors prohibited this book from being saved:</p>
      <% @book.errors.full_messages.each do |message| %>
        <ul>
            <li background-color: pink;class="error-text"><%= message %></li>
        </ul>
      <% end %>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>
    <p class="title">Title</p>
    <div class="text-area"><%= f.text_field :title %></div>
    <p class="title">Body</p>
    <div class="text-area"><%= f.text_area :body %></div>
    <div class="push"><%= f.submit 'Create Book' %></div>
<% end %>
