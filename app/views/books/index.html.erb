<h1>Books</h1>
<table>
    <% @books.each do |book| %>
        <tr>
            <th>Titel</th>
            <th>Body</th>
        </tr>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><a href=#>Show</a></td>
            <td><a href=#>Edit</a></td>
            <td><a href=#>Destroy</a></td>
        </tr>
    <% end %>
</table>




<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>